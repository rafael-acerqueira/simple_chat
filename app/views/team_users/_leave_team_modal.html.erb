<div id="leave_team_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("team_users/0", :method => :delete, class: "col s12 remove_team_user_form") do %>
        <div class="row">
          <div class="col s12">
            <h4>Leave from <%= @team.slug %></h4>
            <p>Are you sure you want to leave from this team?</p>
          </div>
          <div class="input-field col s12">
            <input type="hidden" name="user_remove_id" id="user_remove_id">
            <%= submit_tag("Leave now", class: "btn red right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
